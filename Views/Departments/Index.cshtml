@{
    ViewData["Title"] = "Departments";
}
@model List<Staff_Management.Entities.Departments>

<a href="@Url.Action("Create")" class="btn btn-primary">Add department</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-outline-primary me-2">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger text-dark">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Employees</h3>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Position</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Employees", new { DepartmentId = Model.Id })" class="btn btn-primary">Add Employee</a>
